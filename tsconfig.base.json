{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es6", "DOM", "DOM.Iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": false,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2019",
    "allowJs": true
  },
  "exclude": ["dist", "node_modules", "test/types"],
  "include": [
    "packages/**/*",
    "plugins/**/*"
  ]
}